<h2>Your Cart</h2>
<table>
  <% @cart.line_items.each do |item| %>
      <tr>
        <th>Item</th>
        <th>Price/Day</th>
        <th>Rental Duration</th>
      </tr>
      <tr>
        <td><%= item.product.name %></td>
        <td class="item_price"><%= number_to_currency(item.product.price) %></td>
        <%= form_for (item) do |f| %>
          <td>
            <%= f.text_field :duration, :size => 1 %>
            <%= f.submit :value => "Update Duration" %>
          </td>
        <% end %>
        <td><%= button_to 'Remove from cart', item, method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<div class="form-wrapper">
  <%= button_to 'Checkout', new_order_path, method: :get %>
  <%= button_to 'Empty cart', @cart, method: :delete,
      data: { confirm: 'Are you sure?'} %>
  <%= link_to "Continue shopping", products_url %>
</div>
