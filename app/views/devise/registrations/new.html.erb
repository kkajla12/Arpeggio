<div class="form-wrapper">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true %>
    </div>

    <div class="field">
      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth, required: true %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", required: true, placeholder: @validatable ? "#{@minimum_password_length} Characters Minimum" : "" %>
    </div>

    <div class="field">
      <%= f.label :confirm_password %>
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
    </div>

    <div class="field">
      <%= f.label :street_address %>
      <%= f.text_field :street_address %>
    </div>

    <div class="field">
      <%= f.label :locality %>
      <%= f.text_field :locality, placeholder: "City" %>
    </div>

    <div class="field">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="field">
      <%= f.label :region %>
      <%= f.text_field :region, placeholder: "2-Letter State Abbreviation" %>
    </div>

    <div class="field">
      <%= f.label :account_number %>
      <%= f.text_field :account_number %>
    </div>

    <div class="field">
      <%= f.label :routing_number %>
      <%= f.text_field :routing_number %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button" %>
    </div>
  <% end %>

  <div class="bottom-link">
      <%= render "devise/shared/links" %>
  </div>
</div>
