<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, :required => true %>
  </div>
  <div class="field">
    <%= f.label :deposit %>
    <%= f.text_field :deposit, :required => true %>
  </div>
  <div class="field">
    <%= f.label "Type" %>
    <%= f.select :classification,
        options_for_select(["guitar", "bass", "keyboard", "violin",
                    "accessory", "speaker", "combo amplifier",
                    "amplifier cabinet", "amplifier head", "cable", "mic"])
    %>
  </div>
  <div class="field field-file">
    <%= f.label :image %>
    <%= f.file_field :image, :required => true %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :required => true %>
  </div>

  <!-- isnt a product always unrented at first? TODO: remove this -->
  <div class="field">
    <%= f.label :rented %>
    <%= f.check_box :rented %>
  </div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
